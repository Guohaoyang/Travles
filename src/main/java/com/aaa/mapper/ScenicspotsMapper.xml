<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >
<mapper namespace="com.aaa.dao.ScenicspotsDao">
 
	<select id="queryBySsid" resultType="scenicspots">
		select * from scenicspots where ssid = #{ssid}
	</select>
	
	<select id="queryBySname" resultType="scenicspots">
		select ssid,ssname,scenicspotspic from scenicspots where 1=1
		<if test="ssname != null and ssname != ''">
			and ssname like concat('%',#{ssname},'%')
		</if>
	</select> 
	
</mapper>
